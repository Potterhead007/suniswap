# Network Configuration
NEXT_PUBLIC_NETWORK=devnet

# Solana RPC (optional - uses public endpoint if not set)
NEXT_PUBLIC_RPC_URL=https://api.devnet.solana.com

# Supabase Configuration (for indexer)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Helius Configuration (for webhooks)
# Get your API key at: https://dashboard.helius.dev/
HELIUS_API_KEY=your-helius-api-key
HELIUS_WEBHOOK_SECRET=your-webhook-secret
HELIUS_WEBHOOK_ID=your-webhook-id

# Optional: Custom RPC for higher rate limits
HELIUS_RPC_URL=https://devnet.helius-rpc.com/?api-key=your-api-key
